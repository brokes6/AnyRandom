<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_400"
    android:layout_margin="@dimen/dp_10"
    android:clickable="true"
    android:elevation="@dimen/dp_10"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:transitionName="mainPhoto" />

        <TextView
            android:id="@+id/randomCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_15"
            android:textColor="@color/Black"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/randomName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/randomCategory"
            android:layout_marginStart="@dimen/dp_15"
            android:gravity="center"
            android:textColor="@color/Black"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold" />

        <View
            android:id="@+id/Occlusion"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:layout_alignParentBottom="true"
            android:background="@drawable/file_transparent_black_gradient" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/randomCount"
            android:layout_marginStart="@dimen/dp_20"
            android:text="@string/randomCount"
            android:textColor="@color/Text_gray"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/randomCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/titleIntroduce"
            android:layout_marginStart="@dimen/dp_20"
            android:textColor="@color/White"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/titleIntroduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/dp_20"
            android:textColor="@color/White"
            android:textSize="@dimen/sp_16" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>