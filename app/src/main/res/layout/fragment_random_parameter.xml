<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/RandomName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:text="请输入随机参数名称"
            android:textColor="@color/Text_gray"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/randomText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/RandomName"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_2"
            android:textColor="@color/Red"
            android:textSize="@dimen/sp_12" />

        <EditText
            android:id="@+id/RandomNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/randomText"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_10"
            android:hint="参数和参数之间要用,号隔开哦~"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:textColor="@color/Black" />

        <TextView
            android:id="@+id/RandomCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/RandomNameInput"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:text="请输入随机次数"
            android:textColor="@color/Text_gray"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/randomCountLast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/RandomCount"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_2"
            android:textColor="@color/Red"
            android:textSize="@dimen/sp_12" />

        <EditText
            android:id="@+id/RandomCountInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/randomCountLast"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_10"
            android:hint="请输入随机次数~"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:textColor="@color/Black" />

        <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
            android:id="@+id/Refresh"
            android:layout_width="@dimen/dp_130"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_30"
            android:background="@drawable/btn_red_selector"
            android:text="刷新数据"
            android:textColor="@color/White"
            android:textSize="@dimen/sp_14"
            app:spinning_bar_color="#FFF"
            app:spinning_bar_padding="6dp"
            app:spinning_bar_width="4dp" />
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>