<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/RandomName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_15"
            android:text="请输入随机参数名称"
            android:textColor="@color/Black"
            android:textSize="@dimen/sp_18" />

        <EditText
            android:id="@+id/RandomNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/RandomName"
            android:layout_marginStart="@dimen/dp_15"
            android:hint="参数和参数之间要用,号隔开哦~"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:textColor="@color/White" />

        <TextView
            android:id="@+id/RandomCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/RandomNameInput"
            android:layout_margin="@dimen/dp_15"
            android:text="请输入随机次数"
            android:textColor="@color/Black"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:id="@+id/RandomCountInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/RandomCount"
            android:layout_marginStart="@dimen/dp_15"
            android:hint="请输入随机次数~"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:textColor="@color/White" />


        <Button
            android:id="@+id/Refresh"
            android:layout_width="@dimen/dp_150"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@color/Red"
            android:text="刷新数据"
            android:textColor="@color/White" />
    </RelativeLayout>
</layout>