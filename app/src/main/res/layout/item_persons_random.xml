<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainCrad"
    android:layout_width="@dimen/dp_140"
    android:layout_height="@dimen/dp_180"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginEnd="@dimen/dp_10"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/dp_5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/cardImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <View
            android:id="@+id/Occlusion"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_90"
            android:background="@drawable/file_transparent_black_opposition" />

        <TextView
            android:id="@+id/cardRandomClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/White"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/cardRandomResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/White"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cardRandomCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardRandomResult"
            android:layout_marginStart="@dimen/dp_10"
            android:textColor="@color/White"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/cardRandomTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:textColor="@color/White"
            android:textSize="@dimen/sp_13" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>